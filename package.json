{
    "name": "store-website",
    "private": true,
    "version": "0.2.2",
    "description": "Product store website for dSebastien",
    "author": "SÃ©bastien Dubois",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DeveloPassion/store-website.git"
    },
    "bugs": {
        "url": "https://github.com/DeveloPassion/store-website/issues"
    },
    "homepage": "https://store.dsebastien.net",
    "scripts": {
        "store": "tsx scripts/store-cli.ts",
        "extract": "tsx scripts/extract-product-data.ts",
        "aggregate:products": "tsx scripts/utils/aggregate-products.ts",
        "dev": "npm run aggregate:products && vite",
        "build": "npm run aggregate:products && tsc && vite build && tsx scripts/utils/generate-static-pages.ts && tsx scripts/utils/generate-sitemap.ts && tsx scripts/utils/generate-llms-txt.ts",
        "preview": "vite preview",
        "prepare": "husky",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write .",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch --preserveWatchOutput",
        "tscw": "npm run tsc:watch",
        "validate:products": "npm run aggregate:products && tsx scripts/validate-products.ts",
        "validate:promotion": "tsx scripts/validate-promotion.ts",
        "update:promotion": "tsx scripts/update-promotion.ts",
        "update:tags": "tsx scripts/update-tags.ts",
        "update:categories": "tsx scripts/update-categories.ts",
        "update:products": "tsx scripts/update-products.ts",
        "manage:product-content": "tsx scripts/manage-product-content.ts",
        "validate:relationships": "tsx scripts/validate-relationships.ts",
        "validate:categories": "tsx scripts/validate-categories.ts",
        "validate:tags": "tsx scripts/validate-tags.ts",
        "validate:all": "npm run validate:categories && npm run validate:tags && npm run validate:promotion && npm run validate:products && npm run validate:relationships",
        "commit": "cz",
        "cm": "npm run commit",
        "commit:lint": "commitlint --from HEAD~1 --to HEAD --verbose",
        "release": "bash scripts/utils/release.sh",
        "release:update-version": "tsx scripts/utils/update-version.ts",
        "release:changelog": "tsx scripts/utils/generate-changelog.ts",
        "add": "npm run format && git add -A && npm run commit",
        "push": "git push && git push --tags",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "ci:local": "npm run aggregate:products && npm run lint && npm run tsc && npm run test:run && npm run validate:all && npm run build"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": ".cz-config.cjs"
        }
    },
    "engines": {
        "node": ">=20.0",
        "npm": ">=10.1.0"
    },
    "dependencies": {
        "@headlessui/react": "2.2.0",
        "clsx": "2.1.1",
        "date-fns": "4.1.0",
        "framer-motion": "12.25.0",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "react-icons": "5.5.0",
        "react-markdown": "10.1.0",
        "react-router": "7.12.0",
        "tailwind-merge": "3.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "20.3.1",
        "@commitlint/config-conventional": "20.0.0",
        "@eslint/js": "9.36.0",
        "@tailwindcss/vite": "4.1.18",
        "@testing-library/jest-dom": "6.9.1",
        "@testing-library/react": "16.3.1",
        "@testing-library/user-event": "14.6.1",
        "@types/node": "25.0.3",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "@vitejs/plugin-react": "5.1.2",
        "@vitest/ui": "4.0.16",
        "commitizen": "4.3.1",
        "conventional-changelog-cli": "5.0.0",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "cz-customizable": "7.5.1",
        "eslint": "9.36.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "7.0.1",
        "globals": "17.0.0",
        "happy-dom": "20.1.0",
        "husky": "9.1.7",
        "inquirer": "13.1.0",
        "jsdom": "27.4.0",
        "lint-staged": "16.2.7",
        "prettier": "3.7.4",
        "prettier-plugin-tailwindcss": "0.7.1",
        "tailwindcss": "4.1.18",
        "tsx": "4.21.0",
        "typescript": "5.9.3",
        "typescript-eslint": "8.52.0",
        "vite": "7.3.1",
        "vitest": "4.0.16",
        "zod": "4.3.5"
    }
}
