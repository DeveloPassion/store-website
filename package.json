{
    "name": "store-website",
    "private": true,
    "version": "0.1.0",
    "description": "Product store website for dSebastien",
    "author": "SÃ©bastien Dubois",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DeveloPassion/store-website.git"
    },
    "bugs": {
        "url": "https://github.com/DeveloPassion/store-website/issues"
    },
    "homepage": "https://store.dsebastien.net",
    "scripts": {
        "extract": "tsx scripts/extract-product-data.ts",
        "aggregate:products": "tsx scripts/aggregate-products.ts",
        "dev": "npm run aggregate:products && vite",
        "build": "npm run aggregate:products && tsc && vite build && tsx scripts/generate-static-pages.ts && tsx scripts/generate-sitemap.ts && tsx scripts/generate-llms-txt.ts",
        "preview": "vite preview",
        "prepare": "husky",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write .",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch --preserveWatchOutput",
        "tscw": "npm run tsc:watch",
        "validate:products": "npm run aggregate:products && tsx scripts/validate-products.ts",
        "validate:promotion": "tsx scripts/validate-promotion.ts",
        "update:promotion": "tsx scripts/update-promotion.ts",
        "update:tags": "tsx scripts/update-tags.ts",
        "update:categories": "tsx scripts/update-categories.ts",
        "update:products": "tsx scripts/update-products.ts",
        "validate:relationships": "tsx scripts/validate-relationships.ts",
        "validate:categories": "tsx scripts/validate-categories.ts",
        "validate:tags": "tsx scripts/validate-tags.ts",
        "validate:all": "npm run validate:categories && npm run validate:tags && npm run validate:promotion && npm run validate:products && npm run validate:relationships",
        "commit": "cz",
        "cm": "npm run commit",
        "commit:lint": "commitlint --from HEAD~1 --to HEAD --verbose",
        "release": "bash scripts/release.sh",
        "release:update-version": "tsx scripts/update-version.ts",
        "release:changelog": "tsx scripts/generate-changelog.ts",
        "add": "npm run format && git add -A && npm run commit",
        "push": "git push && git push --tags",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": ".cz-config.cjs"
        }
    },
    "engines": {
        "node": ">=20.0",
        "npm": ">=10.1.0"
    },
    "dependencies": {
        "@headlessui/react": "^2.2.0",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "framer-motion": "^12.23.26",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-icons": "5.5.0",
        "react-markdown": "^10.1.0",
        "react-router": "7.9.6",
        "tailwind-merge": "3.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "20.1.0",
        "@commitlint/config-conventional": "20.0.0",
        "@eslint/js": "^9.36.0",
        "@tailwindcss/vite": "4.1.17",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "24.10.1",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "@vitejs/plugin-react": "5.1.1",
        "@vitest/ui": "^4.0.16",
        "commitizen": "4.3.1",
        "conventional-changelog-cli": "5.0.0",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "cz-customizable": "7.5.1",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "globals": "^16.4.0",
        "happy-dom": "^20.1.0",
        "husky": "^9.1.7",
        "inquirer": "^9.2.0",
        "jsdom": "^27.4.0",
        "lint-staged": "16.2.7",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "tailwindcss": "4.1.17",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "8.48.0",
        "vite": "7.2.4",
        "vitest": "^4.0.16",
        "zod": "^4.3.5"
    }
}
